#! /bin/bash

SRC_DIR="$1"
DST_DIR="$2"

function process() { perl -e '
{
  my %domains;
  while (<>) {
    next if ( m/^#/ || m/^[[:space:]]*$/ );
    s/^\s|^www\.|^\.|\s$//g; 
    $domains{lc()} = undef;
  }

  DOMAIN: foreach $domain (keys %domains) {
    $subdomain = $domain;
    while ( $subdomain =~ m/\./ ) {
      $subdomain =~ s/.+?\.//;
      next DOMAIN if( exists $domains{$subdomain})
    }
    print "$domain\n";
  }

}' | sort; }

cat "$SRC_DIR"/antifilter-community.lst  | process > "$DST_DIR"/antifilter-community
cat "$SRC_DIR"/itdoginfo-inside.lst      | process > "$DST_DIR"/itdoginfo-inside
cat "$SRC_DIR"/itdoginfo-outside.lst     | process > "$DST_DIR"/itdoginfo-outside
cat "$SRC_DIR"/itdoginfo-outside.lst     | process > "$DST_DIR"/all-outside
{
cat "$SRC_DIR"/antifilter-community.lst
cat "$SRC_DIR"/itdoginfo-inside.lst
                                        } | process > "$DST_DIR"/all
